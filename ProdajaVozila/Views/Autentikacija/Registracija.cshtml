<h2>Registracija</h2>


<div>
    @ViewBag.Message
</div>

<form action="~/Autentikacija/Registracija" method="post">
               


    <table>

        <tr>
            <td>Username: </td>
            <td><input type="text" name="username" /></td>
        </tr>

     

        <tr>
            <td>Password: </td>
            <td><input type="password" name="password" /></td>
        </tr>


        <tr>
            <td>Ime: </td>
            <td><input type="text" name="ime" /></td>
        </tr>

        <tr>
            <td>Prezime: </td>
            <td><input type="text" name="prezime" /></td>
        </tr>

        <tr>
            <td>Pol: </td>
            <td>
                <input type="radio" name="pol" value="MUSKI" checked>
                <label> Muski </label><br>

                <input type="radio" name="pol" value="ZENSKI" />
                <label> Zenski </label><br />
            </td>


        </tr>

        <tr>
            <td>E-mail: </td>
            <td><input type="email" name="email"/></td>

        </tr>

        <tr>
            <td>Datum rodjenja: </td>
            <td><input type="date" name="datumRodjenja" /></td>
        </tr>

        <tr>
            <td> <input type="submit" value="Registruj se" /></td>
        </tr>


    </table>


</form>
        
        