@using ProdajaVozila.Models
@model IEnumerable<Vozilo>





<h2>Vozila koja su na prodaju</h2>



<table border="1" class="table">

    <tr>

        <th> Marka </th>
        <th> Model </th>
        <th> &Scaron;asija </th>
        <th> Boja </th>
        <th> Broj vrata </th>
        <th> Opis </th>
        <th> Vrsta goriva </th>
        <th> Cena </th>
       


    </tr>

    @foreach (Vozilo v in Model)
    {
        <tr>
            <td> @v.MarkaVozila </td>
            <td> @v.Model </td>
            <td> @v.OznakaSasije </td>
            <td> @v.Boja </td>
            <td> @v.BrojVrata </td>
            <td> @v.Opis </td>
            <td> @v.VrstaGoriva </td>
            <td> @v.Cena </td>
            <td>
                <form method="post" action="~/Soping/PrikazDetalja">
                    <input type="text" name="oznakaSasije" value="@v.OznakaSasije" hidden />
                    <input type="submit" value="Detaljnije" />
                </form>
            </td>
            

        </tr>
    }

</table>

